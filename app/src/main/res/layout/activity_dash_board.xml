<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_cart3"
        tools:context=".DashBoardActivity">

    <ImageView
            android:id="@+id/imageView_Back"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="0dp"
            app:srcCompat="@drawable/ic_left_black_24dp"
            tools:ignore="VectorDrawableCompat"/>
    <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign In"
            android:textColor="@color/color1"
            android:textSize="40sp"
            android:layout_below="@id/imageView_Back"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="20dp"
    />
    <EditText android:layout_width="match_parent" android:layout_height="50dp"
              android:id="@+id/editText_Email"
              android:layout_below="@id/txt"
              android:layout_marginTop="35dp"
              android:hint="Email"
            android:paddingLeft="20dp"
            android:background="@drawable/custom_button6"
              android:layout_marginLeft="25dp"
              android:layout_marginRight="25dp"
    />

    <EditText
            android:id="@+id/editText_Pass"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/editText_Email"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="35dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/custom_button6"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="20dp" />
    <ProgressBar
            style="@style/Widget.AppCompat.ProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBarrrr"
            android:layout_below="@id/editText_Pass"
            android:layout_centerHorizontal="true"
             tools:visibility="invisible"
            android:visibility="invisible"/>

    <CheckBox
            android:id="@+id/radio_Button_Remember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editText_Pass"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="35dp"
            android:button="@drawable/custon_radiobuttton"
            android:checked="true"
            android:clickable="true"
            android:enabled="true"
            android:text="Remember" />

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/textViewForgotPassword"
              android:text="Forgot Password ?"
              android:layout_below="@id/editText_Pass"
              android:layout_toRightOf="@+id/radio_Button_Remember"
              android:layout_marginLeft="65dp"
              android:layout_marginTop="38dp"
    />
    <Button android:layout_width="match_parent" android:layout_height="wrap_content"
            android:id="@+id/button_signin"
            android:layout_below="@id/radio_Button_Remember"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:text="Sign In"
            android:textAllCaps="false"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:textColor="#FFFF"
            android:background="@drawable/custom_button"
    />
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/or"
              android:text="Or"
              android:layout_below="@+id/button_signin"
              android:layout_centerHorizontal="true"
              android:layout_marginTop="10dp"
              android:textSize="18sp"
    />
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="GG or FB"
            android:src="@drawable/gg_or_fb"
            android:id="@+id/buttonGGorFB"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_below="@id/or"/>
    <LinearLayout
            android:id="@+id/buttonggfb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/or"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"/>

    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_below="@id/buttonGGorFB"
                android:layout_centerHorizontal="true"
                  android:layout_marginTop="20dp"
    >
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="Don't have account ?"
        />

        <TextView
                android:id="@+id/textViewRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Create Account"
                android:textColor="@color/color_white" />
    </LinearLayout>




</RelativeLayout>