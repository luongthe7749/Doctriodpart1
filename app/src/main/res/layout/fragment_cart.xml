<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:background="@drawable/bg_cart1"
        >

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >
        <!--    android:fillViewport="true"-->


        <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                android:orientation="vertical">

            <RelativeLayout
                    android:id="@+id/rela08"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/textView_Cart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:text="Cart"
                        android:textColor="@color/color_white"
                        android:textSize="24dp"
                        android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                    android:id="@+id/relaa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/rela07"
                    android:layout_below="@id/rela08"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="25dp">

                <ListView
                        android:id="@+id/listView_Cart"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:divider="@null"
                        android:dividerHeight="0dp"></ListView>
            </RelativeLayout>

            <RelativeLayout
                    android:id="@+id/rela07"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/button__book_cart"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/custom_button4"
                    android:padding="15dp">

                <TextView
                        android:id="@+id/textt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Giá tổng sản phẩm: "
                        android:textColor="@color/color_black"
                        android:textSize="20dp" />

                <TextView
                        android:id="@+id/textViewTotalAll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_toLeftOf="@id/textViewdd"
                        android:text="20.000"
                        android:textColor="@color/color_black"

                        android:textSize="20dp" />

                <TextView
                        android:id="@+id/texttt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/textt"
                        android:layout_marginTop="15dp"
                        android:text="Phí vận chuyển: "
                        android:textColor="@color/color_black"
                        android:textSize="20dp" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/textt"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="5dp"
                        android:layout_toLeftOf="@id/textViewddd"
                        android:text="30.000"
                        android:textColor="@color/color_black"
                        android:textSize="20dp" />

                <TextView
                        android:id="@+id/textViewddd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/textViewdd"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="15dp"
                        android:text="đ"
                        android:textColor="@color/color_black"
                        android:textSize="20sp" />

                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/texttt"
                        android:layout_marginTop="15dp"
                        android:background="@color/color_black" />

                <TextView
                        android:id="@+id/textttt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/texttt"
                        android:layout_marginTop="30dp"
                        android:text="Tổng Số Tiền: "
                        android:textColor="@color/color_black"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                <TextView
                        android:id="@+id/TextView_ThanhTien"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/texttt"
                        android:layout_marginTop="30dp"
                        android:layout_marginRight="5dp"
                        android:layout_toLeftOf="@id/textViewdddd"
                        android:text="50.000"
                        android:textColor="@color/color_black"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                <TextView
                        android:id="@+id/textViewdddd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/textViewddd"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="30dp"
                        android:text="đ"
                        android:textColor="@color/color_black"
                        android:textSize="20sp" />

                <TextView
                        android:id="@+id/textViewdd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="đ"
                        android:textColor="@color/color_black"
                        android:textSize="20sp" />

            </RelativeLayout>

            <Button
                    android:id="@+id/button__book_cart"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/custom_button9"
                    android:text="Đặt Hàng Ngay"
                    android:textColor="@color/color_white"
                    android:textStyle="bold" />

            </LinearLayout>
    </ScrollView>
</RelativeLayout>