<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#3B706C6C">
    <android.support.v7.widget.Toolbar
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_toolbar"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize" android:id="@+id/toolbar_doctor1"
    >
        <RelativeLayout
                android:layout_width="wrap_content" android:layout_height="wrap_content">
            <ImageView android:layout_width="50dp" android:layout_height="50dp"
                       android:src="@drawable/ic_left_white_24dp"
                       android:id="@+id/backk_doctor_dialog"
            />
        </RelativeLayout>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="Doctor"
                      android:textSize="24dp"
                      android:textColor="@color/color_white"
                      android:layout_marginLeft="88dp"
                      android:id="@+id/txtNameee"
            />
        </RelativeLayout>

    </android.support.v7.widget.Toolbar>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="450dp"
                    android:layout_below="@id/toolbar_doctor1" android:id="@+id/relative1"
                    android:background="@color/color_white">
        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="130dp" android:layout_height="130dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/doctor1" android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                android:id="@+id/image_doctor_dialog"/>
        <ImageView android:layout_width="40dp" android:layout_height="40dp"
                    android:layout_marginTop="50dp"
                   android:id="@+id/star" android:src="@drawable/ic_star_border_black_24dp"
                   android:layout_toRightOf="@+id/image_doctor_dialog" android:layout_marginLeft="15dp"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="4.5" android:textSize="20sp"
                  android:layout_toRightOf="@id/star" android:layout_marginTop="56dp" android:textColor="@color/color1"
                  android:layout_marginLeft="7dp" android:id="@+id/danhgia__favorite"/>
        <TextView
                android:text="(300 Reviewer)" android:textColor="@color/color_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView5"
                android:layout_below="@id/star" android:layout_toRightOf="@id/image_doctor_dialog"
                android:layout_marginLeft="15dp" android:layout_marginTop="10dp"/>
        <TextView
                android:text="Dr. Luong Van The"
                android:layout_width="wrap_content" android:textColor="@color/color1"
                android:layout_height="wrap_content" android:id="@+id/txt_Ten_doctor_dialog" android:textStyle="bold"
                android:layout_below="@id/image_doctor_dialog"
                android:textSize="20dp"
                android:layout_marginTop="10dp" android:layout_centerHorizontal="true"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_below="@id/txt_Ten_doctor_dialog" android:text="Rang Ham Mat"
                  android:layout_centerHorizontal="true" android:textSize="15dp"
                  android:id="@+id/txt_khoa_bacsi_dialog" android:textColor="@color/color_black"
        />
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="3"
                      android:layout_below="@id/txt_Ten_doctor_dialog" android:layout_marginTop="35dp"
                      android:orientation="horizontal"
                      android:id="@+id/linear_dialog1">
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:orientation="vertical" android:layout_weight="1">
                <ImageView android:layout_width="70dp" android:layout_height="70dp"
                           android:layout_gravity="center"
                           android:src="@drawable/ic_photo_black_24dp" android:id="@+id/img_photos_dialog"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="Photos" android:layout_gravity="center" android:textColor="@color/color_black"/>
            </LinearLayout>

            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:orientation="vertical" android:layout_weight="1">
                <ImageView android:layout_width="70dp" android:layout_height="70dp"
                           android:layout_gravity="center" android:id="@+id/imageView_Direct"
                           android:src="@drawable/ic_directions_24dp"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="3.5 Km" android:layout_gravity="center" android:textColor="@color/color_black"/>
            </LinearLayout>
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:orientation="vertical" android:layout_weight="1">
                <ImageView android:layout_width="70dp" android:layout_height="70dp"
                           android:layout_gravity="center"
                           android:src="@drawable/ic_call_black_24dp"
                android:id="@+id/call_dialog"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="Call" android:textColor="@color/color_black" android:layout_gravity="center"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:layout_below="@id/linear_dialog1" android:layout_marginTop="17dp"
                      android:orientation="horizontal"
                      android:background="@drawable/custom_button1"
                      android:id="@+id/linear_dialog2" android:layout_marginLeft="10dp"
                      android:layout_marginRight="10dp">

            <ImageView android:layout_width="50dp" android:layout_height="50dp"
                       android:layout_marginLeft="20dp"
                       android:src="@drawable/ic_person_blue_24dp"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="Personal Infomation" android:paddingTop="13dp" android:textSize="20sp"
                      android:paddingBottom="8dp"
                      android:layout_marginLeft="20dp" android:textColor="@color/color1"/>
            <ImageView android:layout_width="50dp" android:layout_height="50dp"
                       android:src="@drawable/ic_right_24dp" android:layout_marginLeft="10dp"/>


        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:layout_below="@id/linear_dialog2" android:layout_marginTop="15dp"
                      android:orientation="horizontal"
                      android:background="@drawable/custom_button1"
                      android:id="@+id/linear_dialog3" android:layout_marginLeft="10dp"
                      android:layout_marginRight="10dp">

            <ImageView android:layout_width="40dp" android:layout_height="40dp"
                       android:layout_marginLeft="20dp" android:layout_marginTop="8dp"
                       android:src="@drawable/ic_rate_review_24dp"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="Review Doctor" android:paddingTop="13dp" android:textSize="20sp"
                      android:layout_marginLeft="20dp" android:textColor="@color/color1"/>
            <ImageView android:layout_width="50dp" android:layout_height="50dp"
                       android:src="@drawable/ic_right_24dp" android:layout_marginLeft="75dp"/>


        </LinearLayout>
        <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/checkBoxHeart_dialog"
                android:layout_below="@+id/textView5" android:layout_toRightOf="@+id/image_doctor_dialog"
                android:layout_marginLeft="50dp" android:layout_marginTop="20dp"
                android:button="@drawable/custom_checkbox_favorite"/>
    </RelativeLayout>

        <Button android:layout_width="match_parent" android:layout_height="50dp"
                android:layout_marginLeft="40dp" android:layout_marginRight="40dp"
                android:text="Book Apointment" android:textAllCaps="false"
                android:background="@drawable/custom_buttom2" android:textColor="@color/color_white"
                android:layout_marginTop="25dp" android:layout_below="@+id/relative1"
                android:id="@+id/button_book_appointment"/>

</RelativeLayout>