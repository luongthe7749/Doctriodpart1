<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:background="@color/color_white"
        >
    <ScrollView
            android:id="@+id/scrollBar_News_Tips"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:scrollbars="none">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rela_tips">
                <ImageView
                        android:id="@+id/imageView_Tips"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="fitXY" />
                <TextView
                        android:id="@+id/namee_tips"
                        android:layout_width="match_parent"
                        android:layout_height="53dp"
                        android:layout_below="@id/imageView_Tips"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="10dp"
                        android:paddingStart="10dp"
                        android:paddingTop="3dp"
                        android:paddingEnd="10dp"
                        android:text="oke ban oiiiii"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/namee_tips"
                        android:id="@+id/timeee"
                        android:text="1 Hours ago"
                        android:paddingLeft="10dp"
                        />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/namee_tips"
                        android:layout_toRightOf="@id/timeee"
                        android:text="| Toàn Cầu"
                        android:textColor="#4CAF50"
                        android:paddingLeft="10dp"
                        />


            </RelativeLayout>


            <View
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:id="@+id/viewww"
                    android:layout_below="@id/rela_tips"
                    android:layout_marginTop="10dp"
                    android:background="#F0F7E9">

            </View>

            <ListView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/viewww"
                    android:id="@+id/listView_Tips"
                    />

        </RelativeLayout>
    </ScrollView>


</RelativeLayout>