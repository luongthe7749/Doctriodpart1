<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Content_News_Activity">


    <ScrollView
            android:id="@+id/scrollBar_News_Content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:scrollbars="none">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rela_Content">
                <ImageView
                        android:id="@+id/imageView_Content"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="fitXY" />
                <TextView
                        android:id="@+id/namee_content"
                        android:layout_width="match_parent"
                        android:layout_height="53dp"
                        android:layout_below="@id/imageView_Content"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="10dp"
                        android:paddingStart="10dp"
                        android:paddingTop="3dp"
                        android:paddingEnd="10dp"
                        android:text="oke ban oiiiii"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/namee_content"
                        android:id="@+id/timeee"
                        android:text="1 Hours ago"
                        android:paddingLeft="10dp"
                        />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/namee_content"
                        android:layout_toRightOf="@id/timeee"
                        android:text="| Toàn Cầu"
                        android:textColor="#4CAF50"
                        android:paddingLeft="10dp"
                        />

            </RelativeLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:id="@+id/viewww"
                    android:layout_below="@id/rela_Content"
                    android:layout_marginTop="10dp"
                    android:background="#F0F7E9">

            </View>
            <TextView
                    android:id="@+id/content_Content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="15dp"
                    android:layout_below="@id/viewww"
                    android:layout_marginTop="5dp"
                    android:text="noi dung cua ngay hom nay la helloworld"

                    />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>