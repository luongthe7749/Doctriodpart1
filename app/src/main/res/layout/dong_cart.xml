<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:background="@null"
        >

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button4"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            >
        <ImageView
                android:id="@+id/imageView_HinhCart"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/com_facebook_profile_picture_blank_portrait"

                />
        <TextView
                android:id="@+id/textView_Ten_Cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kem dưỡng da A-Derma Dermalibour +"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@id/imageView_HinhCart"
                android:textSize="14sp"
                android:padding="10dp"
                android:textColor="@color/color_black"
                />

        <TextView
                android:id="@+id/textView_values_cart_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/vv"
                android:layout_toRightOf="@id/imageView_HinhCart"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="3dp"
                android:paddingBottom="10dp"
                android:text="20.000"
                android:textColor="@color/color_black"
                android:textSize="11sp" />

        <TextView
                android:id="@+id/ttt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/vv"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@+id/textView_values_cart_"
                android:text="đ"
                android:textColor="@color/color_black"
                android:textSize="11sp"

                />

        <ImageView
                android:id="@+id/imageView_minus"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_above="@+id/vv"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@+id/ttt"
                android:src="@drawable/add"
                tools:visibility="invisible" />

        <TextView
                android:id="@+id/textView_Number_Cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/vv"
                android:layout_marginLeft="7dp"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@+id/imageView_minus"
                android:text="5"
                android:textColor="@color/color_black"
                android:textSize="14sp" />

        <ImageView
                android:id="@+id/imageView_add"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_above="@+id/vv"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@+id/textView_Number_Cart"
                android:src="@drawable/minus" />

        <TextView
                android:id="@+id/textView_total_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/vv"
                android:layout_marginRight="3dp"
                android:layout_toStartOf="@+id/tttt"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="20.000"
                android:textColor="@color/color_black"
                android:textSize="11sp"
                android:textStyle="bold" />

        <TextView
                android:id="@+id/tttt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/vv"
                android:layout_marginBottom="10dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:text="đ"
                android:textColor="@color/color_black"
                android:textSize="11sp"
                android:textStyle="bold" />
        <View
                android:id="@+id/vv"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_black"
                android:layout_below="@id/imageView_HinhCart"
                android:layout_marginTop="5dp"
            />

        <RelativeLayout
                android:id="@+id/rela_remove_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/vv"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:layout_centerHorizontal="true"
                >
            <TextView
                    android:id="@+id/remove_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Remove"
                    android:textSize="14dp"
                    android:layout_toRightOf="@+id/vvv"
                    android:layout_marginLeft="3dp"
                    android:textStyle="bold"
                    android:textColor="@color/color_black"
                    />
            <ImageView
                    android:id="@+id/vvv"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_delete_sweep_black_24dp"
                    />

        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>