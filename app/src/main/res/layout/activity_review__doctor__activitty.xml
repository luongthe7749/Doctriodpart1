<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Review_Doctor_Activitty">
    <android.support.v7.widget.Toolbar
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_toolbar"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize" android:id="@+id/toolbar_doctor_review"
    >
        <RelativeLayout
                android:layout_width="wrap_content" android:layout_height="wrap_content">
            <ImageView android:layout_width="50dp" android:layout_height="50dp"
                       android:src="@drawable/ic_left_white_24dp"
                       android:id="@+id/backk_doctor_review"
            />
        </RelativeLayout>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="Review"
                      android:textSize="24dp"
                      android:textColor="@color/color_white"
                      android:layout_marginLeft="88dp"
                      android:id="@+id/txtNameee"
            />
        </RelativeLayout>

    </android.support.v7.widget.Toolbar>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:layout_below="@id/toolbar_doctor_review" android:id="@+id/relative5">
        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="80dp" android:layout_height="80dp"
                android:src="@drawable/doctor1" android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="25dp"
                android:id="@+id/image_doctor_review"/>
        <TextView
                android:text="Dr. Luong Van The"
                android:layout_width="wrap_content" android:textColor="@color/color1"
                android:layout_height="wrap_content" android:id="@+id/txt_Ten_doctor_review"
                android:textSize="20dp" android:layout_marginLeft="120dp"
                android:layout_marginTop="27dp" />
        <TextView
                android:text="Rang Ham Mat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView10"
                android:textSize="15dp"
                android:layout_marginTop="57dp" android:layout_marginLeft="120dp"/>
    </RelativeLayout>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent"
            android:layout_above="@+id/relative100"
    android:layout_below="@id/relative5" android:id="@+id/relative6">

        <ListView
                android:id="@+id/listView_Review"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relative100"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="-1dp">

        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_users_review"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="25dp"
                android:src="@drawable/doctor1" />

        <EditText
                android:id="@+id/edt_comment_review"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="70dp"
                android:layout_toRightOf="@id/image_users_review"
                android:hint="Input comments" />

        <ImageView
                android:id="@+id/image_send_review"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="23dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_send_black_24dp" />
    </RelativeLayout>

</RelativeLayout>